// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
}

model Company {
  id          String      @id @default(cuid())
  name        String      @unique
  logoUrl     String?
  experiences Experience[]
}

model Experience {
  id              String            @id @default(cuid())
  title           String
  startDate       DateTime
  endDate         DateTime?
  description     String
  company         Company           @relation(fields: [companyId], references: [id])
  companyId       String
  accomplishments Accomplishment[]
  projects        Project[]
}

model Accomplishment {
  id            String      @id @default(cuid())
  description   String
  experience    Experience  @relation(fields: [experienceId], references: [id])
  experienceId  String
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
}

model Project {
  id            String      @id @default(cuid())
  name          String
  description   String
  url           String?
  experience    Experience  @relation(fields: [experienceId], references: [id])
  experienceId  String
}

model Education {
  id          String    @id @default(cuid())
  institution String
  degree      String
  field       String
  startDate   DateTime
  endDate     DateTime?
}

model Certification {
  id        String    @id @default(cuid())
  name      String
  issuer    String
  issueDate DateTime
}